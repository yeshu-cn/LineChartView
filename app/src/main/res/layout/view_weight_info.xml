<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/weight_info_data_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/weight_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weight_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128"/>

            <TextView
                android:id="@+id/weight_info_vlaue_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斤"/>
        </LinearLayout>

        <TextView
            android:id="@+id/weight_info_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI 21.5标准"/>

        <work.yeshu.linechartview.view.LineChartView
            android:id="@+id/weight_info_chart"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weight_info_no_data_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weight_info_icon_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/weight_info_text_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/weight_info_icon_no_data"
                android:text="无体脂信息"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/weight_info_chart_no_data"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

</LinearLayout>